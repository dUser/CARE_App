<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:stretchColumns="*" >
    <TableRow         
        android:gravity="center">
        <Button 
            android:onClick="onEventsButton"
            android:text="@string/Events" 
            android:layout_height="match_parent"
            android:gravity="center" 
            android:drawableTop="@drawable/events"
            android:layout_width="0dip"
            android:layout_weight="1" />
        <Button 
            android:onClick="onTodoButton"
            android:text="@string/Todo_List" 
            android:layout_height="match_parent"
            android:gravity="center" 
            android:drawableTop="@drawable/todo"
            android:layout_width="0dip"
            android:layout_weight="1" />
         <Button
            android:onClick="onFormsButton" 
            android:text="@string/Forms" 
            android:layout_height="match_parent"
            android:gravity="center" 
            android:drawableTop="@drawable/forms" 
            android:layout_width="0dip"
            android:layout_weight="1" />            
    </TableRow>
    <TableRow         
        android:gravity="center">
        <Button
            android:onClick="onPhotoButton"  
            android:text="@string/Photos" 
            android:layout_height="match_parent"
            android:gravity="center" 
            android:drawableTop="@drawable/photo" 
            android:layout_width="0dip"
            android:layout_weight="1" />
        <Button
            android:onClick="onDirectoryButton" 
            android:text="@string/Directory" 
            android:layout_height="match_parent"
            android:gravity="center" 
            android:drawableTop="@drawable/directory" 
            android:layout_width="0dip"
            android:layout_weight="1" />            
          <Button
            android:onClick="onContactUsButton"  
            android:text="@string/Contact_Us" 
            android:layout_height="match_parent"
            android:gravity="center" 
            android:drawableTop="@drawable/contact_us" 
            android:layout_width="0dip"
            android:layout_weight="1" />            
    </TableRow>
    <TableRow         
        android:gravity="center">
        <Button
            android:onClick="onResourcesButton" 
            android:text="@string/Resources" 
            android:layout_height="match_parent"
            android:gravity="center" 
            android:drawableTop="@drawable/resources" 
            android:layout_width="0dip"
            android:layout_weight="1" />            
        <Button
            android:onClick="onCalendarButton" 
            android:text="@string/Calendar" 
            android:layout_height="match_parent"
            android:gravity="center" 
            android:drawableTop="@drawable/calendar" 
            android:layout_width="0dip"
            android:layout_weight="1" />            
       
        <!-- place holder -->
        <Button 
            android:text="@string/Events" 
            android:layout_height="match_parent"
            android:gravity="center" 
 			android:visibility="invisible"
            android:enabled="false"
            android:drawableTop="@drawable/events" 
            android:layout_width="0dip"
            android:layout_weight="1" />            
        
    </TableRow>

</TableLayout>
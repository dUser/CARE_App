<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ResourcesActivity"
    android:orientation="vertical" >
    <Button
        android:onClick="onJoinButton"  
        android:text="@string/Join_Us" 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center" 
        android:drawableLeft="@drawable/directory"
        android:background="@drawable/main_selector"
        android:layout_margin="2dp"  />      

    <ListView
        android:id="@+id/resourcesListView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    
     <Button
        android:onClick="onWorkshopsButton"  
        android:text="Workshop materials" 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center" 
        android:drawableLeft="@drawable/forms"
        android:background="@drawable/main_selector"
        android:layout_margin="2dp"  />  


</LinearLayout>
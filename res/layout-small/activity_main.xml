<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="6" >
    <LinearLayout         
        android:gravity="center"
        android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="0dp"
    	android:layout_weight="2" >
        <Button 
            android:onClick="onEventsButton"
            android:text="small_activity_main" 
            android:layout_height="match_parent"
            android:gravity="center" 
            android:drawableTop="@drawable/events"
            android:layout_width="0dip"
            android:layout_weight="4"
            android:background="@drawable/main_selector" 
            android:layout_margin="2dp"/>
        <Button 
            android:onClick="onTodoButton"
            android:text="@string/Todo_List" 
            android:layout_height="match_parent"
            android:gravity="center" 
            android:drawableTop="@drawable/todo"
            android:layout_width="0dip"
            android:layout_weight="4" 
            android:background="@drawable/main_selector"
            android:layout_margin="2dp"/>
        <Button
            android:onClick="onResourcesButton" 
            android:text="@string/Resources" 
            android:layout_height="match_parent"
            android:gravity="center" 
            android:drawableTop="@drawable/resources" 
            android:layout_width="0dip"
            android:layout_weight="2" 
            android:layout_margin="2dp"
            android:enabled="false"
            android:visibility="invisible"            />  

    </LinearLayout >
    <LinearLayout          
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
    	android:layout_height="0dp"
    	android:layout_weight="2">
        <Button
            android:onClick="onDirectoryButton" 
            android:text="@string/Directory" 
            android:layout_height="match_parent"
            android:gravity="center" 
            android:drawableTop="@drawable/directory" 
            android:layout_width="0dip"
            android:layout_weight="4" 
            android:background="@drawable/main_selector"
            android:layout_margin="2dp"/>            
          <Button
            android:onClick="onContactUsButton"  
            android:text="@string/Contact_Us" 
            android:layout_height="match_parent"
            android:gravity="center" 
            android:drawableTop="@drawable/contact_us" 
            android:layout_width="0dip"
            android:layout_weight="4" 
            android:background="@drawable/main_selector"
            android:layout_margin="2dp"/>
        <Button
            android:onClick="onResourcesButton" 
            android:text="@string/Resources" 
            android:layout_height="match_parent"
            android:gravity="center" 
            android:drawableTop="@drawable/resources" 
            android:layout_width="0dip"
            android:layout_weight="2" 
            android:layout_margin="2dp"
            android:enabled="false"
            android:visibility="invisible"           />     
    </LinearLayout >
    <LinearLayout          
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
    	android:layout_height="0dp"
    	android:layout_weight="2">
        <Button
            android:onClick="onCalendarButton" 
            android:text="@string/Calendar" 
            android:layout_height="match_parent"
            android:gravity="center" 
            android:drawableTop="@drawable/calendar" 
            android:layout_width="0dip"
            android:layout_weight="4" 
            android:background="@drawable/main_selector"
            android:layout_margin="2dp"/>
        <Button
            android:onClick="onResourcesButton" 
            android:text="@string/Resources" 
            android:layout_height="match_parent"
            android:gravity="center" 
            android:drawableTop="@drawable/resources" 
            android:layout_width="0dip"
            android:layout_weight="4" 
            android:background="@drawable/main_selector"
            android:layout_margin="2dp"/>
        <Button
            android:onClick="onResourcesButton" 
            android:text="@string/Resources" 
            android:layout_height="match_parent"
            android:gravity="center" 
            android:drawableTop="@drawable/resources" 
            android:layout_width="0dip"
            android:layout_weight="2" 
            android:layout_margin="2dp"
            android:enabled="false"
            android:visibility="invisible"            />    
    </LinearLayout >
    


</LinearLayout>